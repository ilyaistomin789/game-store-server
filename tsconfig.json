{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "skipLibCheck": true,
    "target": "es5",
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceRoot": "./src",
    "types": ["node", "jest"]
  },
  "include": [
    "src",
    "test",
    "node_modules/@types/jest/index.d.ts"
  ],
  "exclude": [
    "tmp",
    "temp",
    "build",
    "node_modules",
    "**/*.d.ts"
  ]
}